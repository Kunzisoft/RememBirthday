<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_birthday_select_card_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/cardViewLight"
            android:layout_gravity="center" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_margin="18dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/fragment_birthday_select_month"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/fragment_birthday_select_day"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fragment_birthday_select_month" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_birthday_select_card_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/cardViewDark">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp">
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/fragment_birthday_select_enable_year"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/fragment_birthday_select_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="8dp">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragment_birthday_select_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>